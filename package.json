{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Portfolio website for Nathan David McWilliams",
  "author": "Nathan McWilliams",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "PINO_LOG_LEVEL=debug next dev | pino-pretty",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "npm test:coverage && open coverage/lcov-report/index.html",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "next lint && npm run lint:css",
    "lint:css": "stylelint -f verbose 'app/**/*.css'",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "clean": "rm -rf .next coverage playwright",
    "optimize-svg": "svgo",
    "optimize-svg:staged": "git --no-pager diff --name-only --cached --diff-filter=AMR 'public/*.svg' | xargs -r npx svgo"
  },
  "dependencies": {
    "@next/third-parties": "^14.1.4",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "clsx": "^2.1.0",
    "js-yaml": "^4.1.0",
    "next": "^14.1.3",
    "normalize.css": "^8.0.1",
    "pino": "^8.19.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mock-fs": "^5.2.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "svgo": "^3.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
